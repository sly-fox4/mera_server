struct flightData       //Структура одного Полета
{
	char idFrom[4];
	char nameFrom[10];
	char idTo[10];
	char nameTo[10];
	bool typeOfFlight;
	int date;
};

struct AirName         //структура для работы со списком Аэропортов
{
	char id[4];
	char name[30];
};

